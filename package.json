{
  "name": "digital-signage",
  "version": "1.0.0",
  "description": "数字标牌商品展示系统",
  "main": "src/main/index.js",
  "scripts": {
    "dev": "cross-env ELECTRON_DISABLE_SECURITY_WARNINGS=true CHCP=65001 webpack serve --config webpack.config.js",
    "build": "cross-env NODE_ENV=production webpack --config webpack.config.js && electron-builder",
    "electron:dev": "cross-env NODE_ENV=development ELECTRON_DISABLE_GPU=1 ELECTRON_DISABLE_SECURITY_WARNINGS=1 ELECTRON_NO_ASAR=1 concurrently \"npm run dev\" \"electron --disable-gpu --disable-software-rasterizer --disable-gpu-compositing --disable-gpu-rasterization --disable-gpu-sandbox --no-sandbox --js-flags=--max-old-space-size=4096 .\"",
    "electron:dev:safe": "cross-env NODE_ENV=development ELECTRON_DISABLE_GPU=1 concurrently \"npm run dev\" \"electron --disable-gpu --disable-software-rasterizer --disable-gpu-compositing --disable-gpu-rasterization --disable-gpu-sandbox --disable-d3d11 --disable-accelerated-video-decode --disable-accelerated-video --disable-accelerated-2d-canvas --no-sandbox .\"",
    "electron:build": "cross-env NODE_ENV=production npm run build && electron-builder",
    "lint": "eslint --ext .js,.vue --ignore-path .gitignore .",
    "test": "jest",
    "test:watch": "jest --watch",
    "clean:cache": "node electron-app-fix.js",
    "start": "node prestart.js && npm run dev"
  },
  "keywords": [
    "digital-signage",
    "electron",
    "vue"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "core-js": "^3.33.0",
    "howler": "^2.2.3",
    "pinia": "^2.1.7",
    "vue": "^3.3.4",
    "vue-router": "^4.2.5"
  },
  "devDependencies": {
    "@babel/core": "^7.23.0",
    "@babel/plugin-transform-runtime": "^7.22.15",
    "@babel/preset-env": "^7.22.20",
    "@babel/preset-typescript": "^7.22.15",
    "@vue/cli-plugin-babel": "^5.0.8",
    "@vue/compiler-sfc": "^3.3.4",
    "babel-loader": "^9.1.3",
    "concurrently": "^8.2.1",
    "cross-env": "^7.0.3",
    "css-loader": "^6.8.1",
    "electron": "^26.6.10",
    "electron-builder": "^24.13.3",
    "eslint": "^8.51.0",
    "eslint-plugin-vue": "^9.17.0",
    "file-loader": "^6.2.0",
    "html-webpack-plugin": "^5.5.3",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "mini-css-extract-plugin": "^2.7.6",
    "prettier": "^3.0.3",
    "style-loader": "^3.3.3",
    "url-loader": "^4.1.1",
    "vue-loader": "^17.2.2",
    "webpack": "^5.88.2",
    "webpack-cli": "^5.1.4",
    "webpack-dev-server": "^4.15.1"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "transform": {
      "^.+\\.jsx?$": "babel-jest",
      "^.+\\.vue$": "@vue/vue3-jest"
    },
    "moduleNameMapper": {
      "^@/(.*)$": "<rootDir>/src/renderer/$1"
    },
    "moduleFileExtensions": [
      "js",
      "json",
      "vue"
    ],
    "testMatch": [
      "**/tests/**/*.spec.js"
    ],
    "collectCoverage": true,
    "collectCoverageFrom": [
      "src/**/*.{js,vue}",
      "!src/main/index.js",
      "!**/node_modules/**"
    ],
    "coverageReporters": [
      "text",
      "html"
    ]
  },
  "electronConfig": {
    "extraArgs": [
      "--disable-gpu",
      "--disable-software-rasterizer",
      "--disable-gpu-compositing",
      "--disable-gpu-rasterization",
      "--disable-2d-canvas-clip-aa",
      "--disable-dev-shm-usage",
      "--no-sandbox"
    ]
  }
}
