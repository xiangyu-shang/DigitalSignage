{
  "name": "coffee-beverage-showcase",
  "version": "1.0.0",
  "description": "咖啡及饮品商品展示系统 - 网页版",
  "private": true,
  "scripts": {
    "dev": "cross-env NODE_ENV=development webpack serve --config web.config.js",
    "build": "cross-env NODE_ENV=production webpack --config web.config.js",
    "serve": "node server.js",
    "lint": "eslint --ext .js,.vue --ignore-path .gitignore .",
    "test": "jest"
  },
  "keywords": [
    "digital-signage",
    "coffee",
    "beverage",
    "vue"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "core-js": "^3.33.0",
    "express": "^4.18.2",
    "compression": "^1.7.4",
    "howler": "^2.2.3",
    "pinia": "^2.1.7",
    "vue": "^3.3.4",
    "vue-router": "^4.2.5"
  },
  "devDependencies": {
    "@babel/core": "^7.23.0",
    "@babel/plugin-transform-runtime": "^7.22.15",
    "@babel/preset-env": "^7.22.20",
    "@babel/preset-typescript": "^7.22.15",
    "@vue/cli-plugin-babel": "^5.0.8",
    "@vue/compiler-sfc": "^3.3.4",
    "babel-loader": "^9.1.3",
    "clean-webpack-plugin": "^4.0.0",
    "concurrently": "^8.2.1",
    "copy-webpack-plugin": "^11.0.0",
    "cross-env": "^7.0.3",
    "css-loader": "^6.8.1",
    "eslint": "^8.51.0",
    "eslint-plugin-vue": "^9.17.0",
    "file-loader": "^6.2.0",
    "html-webpack-plugin": "^5.5.3",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "mini-css-extract-plugin": "^2.7.6",
    "prettier": "^3.0.3",
    "style-loader": "^3.3.3",
    "url-loader": "^4.1.1",
    "vue-loader": "^17.2.2",
    "webpack": "^5.88.2",
    "webpack-cli": "^5.1.4",
    "webpack-dev-server": "^4.15.1"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "transform": {
      "^.+\\.jsx?$": "babel-jest",
      "^.+\\.vue$": "@vue/vue3-jest"
    },
    "moduleNameMapper": {
      "^@/(.*)$": "<rootDir>/src/renderer/$1"
    },
    "moduleFileExtensions": [
      "js",
      "json",
      "vue"
    ],
    "testMatch": [
      "**/tests/**/*.spec.js"
    ],
    "collectCoverage": true,
    "collectCoverageFrom": [
      "src/**/*.{js,vue}",
      "!**/node_modules/**"
    ],
    "coverageReporters": [
      "text",
      "html"
    ]
  }
} 